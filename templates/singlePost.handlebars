{{#thread}}
<div class="container blog-page">
    <ol class="breadcrumb">
        <li><a href="#/home">Home</a></li>
        <li><a href="#/blog">Blog</a></li>
    </ol>
    <div class="row">
        <div id="category-title">
            <h1 class="text-center"><strong>{{topicName}}</strong></h1>
            <h3 class="text-center">{{topicShortDescription}}</h3>
        </div>
    </div>
    <div class="row post-content">
        {{/thread}}
        <section class="col-lg-8  col-md-8 col-sm-12 col-xs-12">
            {{#singlePost}}
            <div class="post">
                <h1>{{threadName}}</h1>
                <hr>
                <h5>Posted by <a href="" class="posted-by">{{postedBy}}</a>
                    <date> {{threadDate}} in </date>
                    <a href="" class="posted-by"></a> | {{comments.length}} Comments</h5>
                <hr>
                <img id="user-single-post-image" src="{{authorImage}}" alt="post img" class="pull-left img-responsive thumb margin10 img-thumbnail">
                <article id="post-article">
                    <h5>
                        {{threadDescription}}
                    </h5>
                </article>
                <a id="read-more-comments" class="btn btn-default btn-blog pull-right">Comments</a>
            </div>
            <div id="article-comments" class="hidden">
                <div id="comments">
                    <br>
                    <h1>{{comments.length}} Comments</h1>
                    {{#each comments}}
                    <div id="comment-{{@index}}" class="media append-reply-form">
                        <div class="media-left">
                            <img src="{{authorImage}}" alt="{{postedBy}}" class="pull-left">
                        </div>
                        <div class="media-body">
                            <h3 class="media-heading text-left">{{postedBy}}</h3>
                            <p id="nested-author1" class="text-right"><small><i>Posted on {{commentDate}}</i></small></p>
                            <p class="nested-p-mobile">{{comment}}</p>
                            <a id="{{@index}}" class="comment-question" class="btn btn-default btn-blog pull-right">Reply</a>
                        </div>
                    </div>
                    {{#each reply}}
                    <div class="media nested">
                        <div class="media-left">
                            <img src="{{authorImage}}" alt="{{postedBy}}" class="pull-left">
                        </div>
                        <div class="media-body">
                            <h3 class="media-heading">{{postedBy}}</h3>
                            <p id="nested-author2" class="text-right"><small><i>Posted on {{commentDate}}</i></small></p>
                            <p class="nested-p nested-p-mobile">{{comment}}</p>
                            {{!--<a class="comment-answer" href="" class="btn btn-default btn-blog pull-right">Reply</a>--}}
                        </div>
                    </div>
                    {{/each}} {{/each}}
                </div>
                <div id="comment-reply">
                    <div class="row">
                        <h1>Leave a Reply</h1>
                        <form id="comment-form-reset" class="col-sm-12">
                                <input type="text" id="name" name="name" class="input-block-level" placeholder="Name" required>
                                <input type="text" id="email" name="email" class="input-block-level" placeholder="Email" required>
                                <textarea rows="3" id="description" name="message" class="input-block-level" placeholder="Message" required></textarea>                                
                                <a id="submit-new-comment" type="submit" class="btn btn-default pull-right">Submit</a>
                        </form>
                    </div>
                </div>
                {{!--<a id="read-less" class="btn btn-default btn-blog pull-right">Submit</a>--}}
            </div>
            {{/singlePost}}
        </section>
        <aside class="col-lg-4  col-md-4 col-sm-12 col-xs-12">
            <div class="col-lg-12  col-md-12 col-sm-4 col-xs-12">
                <ul>
                    <h3 class="text-left">From The Blog</h3>
